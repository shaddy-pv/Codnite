# Production Environment Variables

# Database Configuration
DATABASE_URL=postgresql://codnite_user:secure_password@db.codnite.com:5432/codnite_prod
POSTGRES_DB=codnite_prod
POSTGRES_USER=codnite_user
POSTGRES_PASSWORD=secure_production_password
POSTGRES_HOST=db.codnite.com
POSTGRES_PORT=5432
MAX_CONNECTIONS=50
MIN_CONNECTIONS=10
CONNECTION_TIMEOUT=2000
QUERY_TIMEOUT=10000
STATEMENT_TIMEOUT=10000

# Redis Configuration
REDIS_URL=redis://redis.codnite.com:6379
REDIS_HOST=redis.codnite.com
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password
REDIS_DB=0
REDIS_CONNECT_TIMEOUT=5000
REDIS_COMMAND_TIMEOUT=5000

# Application Configuration
NODE_ENV=production
PORT=3000
APP_URL=https://codnite.com
FRONTEND_URL=https://app.codnite.com
API_URL=https://api.codnite.com

# Authentication & Security
JWT_SECRET=super_secure_jwt_secret_key_minimum_32_characters_long_for_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=codnite
JWT_AUDIENCE=codnite-users
SESSION_SECRET=super_secure_session_secret_key_for_production
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5
CORS_ORIGIN=https://app.codnite.com
ALLOWED_ORIGINS=https://app.codnite.com,https://codnite.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/www/codnite/uploads
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain
FILE_STORAGE_TYPE=s3
FILE_STORAGE_PATH=s3://codnite-uploads

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
FROM_EMAIL=noreply@codnite.com
FROM_NAME=Codnite Team
EMAIL_TEMPLATES_PATH=/var/www/codnite/templates/email

# CDN Configuration
CDN_PROVIDER=cloudinary
CDN_URL=https://res.cloudinary.com/codnite
CLOUDINARY_CLOUD_NAME=codnite
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=codnite-uploads

# Monitoring & Logging
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/codnite/app.log
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/api/metrics
GRAFANA_PORT=3001
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=secure_grafana_password

# Security Configuration
SECURITY_HEADERS=true
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self'; frame-ancestors 'self';
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true
XSS_PROTECTION=true
X_FRAME_OPTIONS=SAMEORIGIN
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=strict-origin-when-cross-origin

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/codnite.crt
SSL_KEY_PATH=/etc/ssl/private/codnite.key
SSL_ENABLED=true
SSL_PORT=443

# Performance Configuration
ENABLE_CACHING=true
CACHE_TTL=3600
CACHE_MAX_MEMORY=1gb
CACHE_EVICTION_POLICY=allkeys-lru
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/codnite
BACKUP_COMPRESSION=true

# External Services
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=production
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=Codnite

# Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=live

# Notification Configuration
PUSH_NOTIFICATIONS_ENABLED=true
PUSH_NOTIFICATIONS_VAPID_PUBLIC_KEY=your_vapid_public_key
PUSH_NOTIFICATIONS_VAPID_PRIVATE_KEY=your_vapid_private_key
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_URL=https://codnite.com/webhooks

# Feature Flags
FEATURE_FLAGS_ENABLED=true
FEATURE_FLAGS_PROVIDER=launchdarkly
FEATURE_FLAGS_SDK_KEY=your_launchdarkly_sdk_key
FEATURE_CHAT_ENABLED=true
FEATURE_VIDEO_CALLS_ENABLED=false
FEATURE_AI_ASSISTANT_ENABLED=true
FEATURE_DARK_MODE_ENABLED=true

# Custom Configuration
CUSTOM_CONFIG_ENABLED=false
CUSTOM_CONFIG_PATH=/var/www/codnite/config/custom.json
CUSTOM_API_KEY_1=your_custom_api_key_1
CUSTOM_API_KEY_2=your_custom_api_key_2
CUSTOM_SETTING_1=value1
CUSTOM_SETTING_2=value2